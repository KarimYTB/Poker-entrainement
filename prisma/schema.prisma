generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  name         String?
  email        String?   @unique
  passwordHash String?
  image        String?
  level        String    @default("DÃ©butant")
  goals        String?
  settings     Settings?
  hands        Hand[]
  accounts     Account[]
  sessions     Session[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Settings {
  id                 String  @id @default(cuid())
  userId             String  @unique
  tableStyle         String  @default("neon")
  animationSpeed     String  @default("normal")
  reduceAnimations   Boolean @default(false)
  soundEnabled       Boolean @default(true)
  user               User    @relation(fields: [userId], references: [id])
}

model Hand {
  id            String   @id @default(cuid())
  userId        String
  createdAt     DateTime @default(now())
  tableSize     Int
  blinds        String
  buyIn         Int
  stackDepth    Int
  heroCards     Json
  board         Json
  potSize       Int
  result        String
  netGain       Int
  actions       Json
  opponents     Json
  coaching      Json
  user          User     @relation(fields: [userId], references: [id])
}

model AIProfile {
  id          String   @id @default(cuid())
  name        String
  avatar      String
  description String
  vpip        Float
  pfr         Float
  threeBet    Float
  aggression  Float
  level       String
  style       String
  createdAt   DateTime @default(now())
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
